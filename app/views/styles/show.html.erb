      <td><%if v.picture_file_name %><%= image_tag v.picture.url(:thumb) %><% end %></td>
      <td><%= v.color %></td>
      <td><%= v.material%></td>
      <td><%= link_to 'Edit', edit_style_varient_path(@style, v)%> </td>
      <td><%= link_to 'Delete', style_varient_path(@style, v), {method:"DELETE"}%></td>
    </tr>
    <% end %>
