
<%= form_for @style, :html => {class: 'edit_style form-horizontal'} do |f| %>
    <div class="container">
      <div class="row"><legend class="col-md-4 col-md-offset-4">Edit Style</legend></div>
      <fieldset>
          <div class="form-group">
              <%= f.label :default_image, 'Default Image*', class: 'col-md-4 control-label' %>
              <div class="col-md-5">
                  <%= f.file_field :avatar, class: 'form-control' %>
              </div>
          </div>
          <div class="form-group">
              <%= f.label :style_number, 'Style Number*', class: 'col-md-4 control-label' %>
              <div class="col-md-5">
                  <%= f.text_field :style_number, class: 'form-control' %>
              </div>
          </div>
          <div class="form-group">
              <%= f.label :name, 'Name*', class: 'col-md-4 control-label' %>
              <div class="col-md-5">
                  <%= f.text_field :name, class: 'form-control' %>
              </div>
          </div>
          <div class="form-group">
              <%= f.label :reference, 'Reference*', class: 'col-md-4 control-label' %>
              <div class="col-md-5">
                  <%= f.text_field :reference, class: 'form-control' %>
              </div>
          </div>
          <div class="form-group">
              <%= f.label :cost, 'Cost*', class: 'col-md-4 control-label' %>
              <div class="col-md-5">
                  <%= f.number_field :cost, class: 'form-control' %>
              </div>
          </div>
          <div class="form-group">
              <%= f.label :msrp, 'MSRP*', class: 'col-md-4 control-label' %>
              <div class="col-md-5">
                  <%= f.number_field :msrp, class: 'form-control' %>
              </div>
          </div>
          <div class="form-group">
              <div class="col-md-8 col-md-offset-4">
                  <%= f.submit 'Edit Style', class: 'btn btn-success' %>
              </div>
          </div>
        </div>

    </fieldset>


<% end %>
<div class="center">
<%= link_to 'New Style', new_style_path(@style) %> |
<%= link_to 'Cancel', styles_path %>
</div>
