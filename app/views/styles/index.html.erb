

<p id="notice"><%= notice %></p>

<div class="container">


<h1>Style List</h1>
<%= link_to 'Create New Style', new_style_path(@style) %>

<% Style.all.order(:style_number).in_groups_of(3, false).each do |group| %>

<div class="row">
  <% group.each do |s|%>
    <div class="col-md-2">
      <div class="thumbnail center">
        <%= image_tag s.avatar.url(:thumb) %>
      </div>
    </div>
      <div class="col-md-2">
        <div class="row">
          <div class="col-md-1">
        <p>
          <%= s.style_number %>
        </p>
          </div>
          <div class="col-md-1">
            <p>
              <%= s.name %>
            </p>
          </div>
        </div>
        <div class="row">
          <p>
            <%= s.reference %>
          </p>
        </div>
        <div class="row">
          <p>
            <%= s.cost %>
          </p>
        </div>
        <div class="row">
            <p>
              <%= s.msrp %>
            </p>
        </div>
      </div>

<% end %>
</div>
<% end %>

</div>
